# Example portmon configuration
# Place at /etc/portmon/portmon.yaml

# Ports to monitor (required)
# New format with descriptions:
ports:
  - port: 5000
    description: "Main API Server"
  - port: 8080
    description: "Web Frontend"

# Old format also supported:
# ports:
#   - 5000
#   - 8080

# Data directory for SQLite database
# Default: /var/lib/portmon
data_dir: /var/lib/portmon

# Unix socket path for IPC
# Default: /run/portmon/portmon.sock
socket: /run/portmon/portmon.sock

# Data retention in days (1-365)
# Default: 180
retention_days: 90

# Log level: debug, info, warn, error
# Default: info
log_level: info
